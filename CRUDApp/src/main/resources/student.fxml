<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="443.0" prefWidth="886.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mahmud.com.crudapp.controller.AppController">
   <children>
      <VBox layoutX="10.0" layoutY="57.0" prefHeight="221.0" prefWidth="217.0" spacing="15.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Firstname" />
            <TextField fx:id="txtFirst" prefHeight="25.0" prefWidth="177.0" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Middlename" />
            <TextField fx:id="txtMiddle" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Lastname" />
            <TextField fx:id="txtLast" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </VBox>
      <TableView fx:id="tableStudent" layoutX="235.0" layoutY="65.0" onMouseClicked="#getData" prefHeight="271.0" prefWidth="647.0">
        <columns>
            <TableColumn fx:id="colID" prefWidth="50.0" text="ID" />
          <TableColumn fx:id="colFirst" prefWidth="131.0" text="Firstname" />
          <TableColumn fx:id="colMiddle" prefWidth="139.0" text="Middlename" />
            <TableColumn fx:id="colLast" prefWidth="162.0" text="Lastname" />
            <TableColumn fx:id="colCourse" prefWidth="90.0" text="Course" />
            <TableColumn fx:id="colGender" prefWidth="75.0" text="Gender" />
        </columns>
      </TableView>
      <ButtonBar layoutX="263.0" layoutY="342.0" prefHeight="40.0" prefWidth="420.0">
        <buttons>
          <Button fx:id="btnSave" mnemonicParsing="false" onAction="#SaveClick" text="Save" />
            <Button fx:id="btnUpdate" layoutX="413.0" layoutY="18.0" mnemonicParsing="false" onAction="#updateClick" text="Update" />
            <Button fx:id="btnDelete" layoutX="328.0" layoutY="18.0" mnemonicParsing="false" onAction="#deleteClick" text="Delete" />
            <Button fx:id="btnClear" layoutX="243.0" layoutY="18.0" mnemonicParsing="false" onAction="#clearClick" text="Clear" />
        </buttons>
      </ButtonBar>
      <Label layoutX="14.0" layoutY="284.0" text="Course" />
      <CheckBox fx:id="chkBCA" layoutX="60.0" layoutY="284.0" mnemonicParsing="false" text="BCA" />
      <CheckBox fx:id="chkBSC" layoutX="154.0" layoutY="284.0" mnemonicParsing="false" text="B. Sc. IT" />
      <RadioButton fx:id="radMale" layoutX="154.0" layoutY="316.0" mnemonicParsing="false" text="Male">
         <toggleGroup>
            <ToggleGroup fx:id="gender" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="radFemale" layoutX="60.0" layoutY="316.0" mnemonicParsing="false" selected="true" text="Female" toggleGroup="$gender" />
      <Label layoutX="14.0" layoutY="316.0" text="Gender" />
   </children>
</AnchorPane>
