<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="443.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mahmud.com.crudapp.controller.AppController">
   <children>
      <VBox layoutX="10.0" layoutY="57.0" prefHeight="221.0" prefWidth="217.0" spacing="15.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Firstname" />
            <TextField fx:id="txtFirst" prefHeight="25.0" prefWidth="177.0" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Middlename" />
            <TextField fx:id="txtMiddle" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Lastname" />
            <TextField fx:id="txtLast" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </VBox>
      <TableView fx:id="tableStudent" layoutX="236.0" layoutY="64.0" onMouseClicked="#getData" prefHeight="200.0" prefWidth="435.0">
        <columns>
            <TableColumn fx:id="colID" prefWidth="50.0" text="ID" />
          <TableColumn fx:id="colFirst" prefWidth="130.0" text="Firstname" />
          <TableColumn fx:id="colMiddle" prefWidth="125.0" text="Middlename" />
            <TableColumn fx:id="colLast" prefWidth="130.0" text="Lastname" />
        </columns>
      </TableView>
      <ButtonBar layoutX="196.0" layoutY="307.0" prefHeight="40.0" prefWidth="420.0">
        <buttons>
          <Button fx:id="btnSave" mnemonicParsing="false" onAction="#SaveClick" text="Save" />
            <Button fx:id="btnUpdate" layoutX="413.0" layoutY="18.0" mnemonicParsing="false" onAction="#updateClick" text="Update" />
            <Button fx:id="btnDelete" layoutX="328.0" layoutY="18.0" mnemonicParsing="false" onAction="#deleteClick" text="Delete" />
            <Button fx:id="btnClear" layoutX="243.0" layoutY="18.0" mnemonicParsing="false" onAction="#clearClick" text="Clear" />
        </buttons>
      </ButtonBar>
   </children>
</AnchorPane>
